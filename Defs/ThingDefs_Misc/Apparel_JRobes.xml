<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
    <defName>PJ_Jedi_Robe</defName>
    <label>Jedi Robe</label>
    <description>A Jedi's Robes\n\n(Star Wars - The Force)</description>
    <techLevel>Spacer</techLevel>
	<recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Robes/JediRobe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Hyperweave>30</Hyperweave>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <generateCommonality>0.001</generateCommonality>	
    <statBases>
      <WorkToMake>700</WorkToMake>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.93</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.93</ArmorRating_Sharp>
	   
	  <ArmorRating_Heat>0.95</ArmorRating_Heat>
      <Insulation_Cold>-30</Insulation_Cold>
	  <Insulation_Heat>30</Insulation_Heat>
    </statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
			<PsychicSensitivity>-0.05</PsychicSensitivity>
			<MoveSpeed>0.020</MoveSpeed>
			<PlantWorkSpeed>0.025</PlantWorkSpeed>
			<PlantHarvestYield>0.04</PlantHarvestYield>
			<MentalBreakThreshold>-0.02</MentalBreakThreshold>
			<MeleeHitChance>0.035</MeleeHitChance>
			<AimingDelayFactor>-0.01</AimingDelayFactor>
			<NegotiationAbility>0.025</NegotiationAbility>
			<SocialImpact>0.015</SocialImpact>
			<TradePriceImprovement>0.025</TradePriceImprovement>
			<MedicalPotency>0.025</MedicalPotency>
			<MedicalSurgerySuccessChance>0.030</MedicalSurgerySuccessChance>
			<MedicalTendQuality>0.030</MedicalTendQuality>
			<MedicalTendSpeed>0.025</MedicalTendSpeed>
			<MedicalOperationSpeed>0.03</MedicalOperationSpeed>
			<WorkSpeedGlobal>0.025</WorkSpeedGlobal>
			<MiningSpeed>0.05</MiningSpeed>
			<SmithingSpeed>0.028</SmithingSpeed>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
	    <li>Torso</li>
		<li>Arms</li>
        <li>Legs</li>
		<li>Shoulders</li>
      </bodyPartGroups>
	  <wornGraphicPath>Robes/JediRobe</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
